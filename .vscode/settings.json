{
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.markdownlint": true
    },
    "textlint.autoFixOnSave": true,
    "textlint.configPath": "config/.textlintrc.yml",
    "textlint.languages": [
        "markdown",
    ]
}
